{
    "configurations": [
        {
            "name": "OSDev",
            "includePath": [
                "${workspaceFolder}/*",
                "${workspaceFolder}/**/**",
                "/opt/cross/**",
                "${workspaceFolder}/archs/**/kernel/include"
            ],
            "defines": [
                "__MULTIBOOT__",
                "_DEBUG"
            ],
            "compilerPath": "/opt/cross/bin/i686-elf-g++",
            "intelliSenseMode": "windows-gcc-x86",
            "compilerArgs": [
                "-fno-exceptions",
                "-fno-rtti",
                "-std=c++2b",
                "-ffreestanding",
                "-nostdlib",
                "-nostartfiles",
                "-nodefaultlibs",
                "-mno-red-zone"
            ],
            "cStandard": "c23",
            "cppStandard": "c++23"
        }
    ],
    "version": 4
}